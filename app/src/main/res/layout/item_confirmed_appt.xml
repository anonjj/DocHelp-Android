<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#10000000"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with patient name and status indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <!-- Status indicator dot -->
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_dot"
                android:backgroundTint="@color/dochelp_red_primary"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvPatient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Asha Patel"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textDark"/>

            <!-- Optional: Appointment type badge -->
            <TextView
                android:id="@+id/tvAppointmentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkup"
                android:textSize="11sp"
                android:textColor="@color/dochelp_red_primary"
                android:background="@drawable/badge_bg"
                android:backgroundTint="#FFEBEE"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Time info with icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                android:layout_marginEnd="6dp"
                app:tint="@color/textLight" />

            <TextView
                android:id="@+id/tvWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu, 16 Oct â€¢ 10:30 AM"
                android:textSize="14sp"
                android:textColor="@color/textLight"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginBottom="12dp"/>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipNotes"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Notes"
                app:chipIcon="@drawable/ic_notes"
                app:chipIconTint="@color/dochelp_red_primary"
                app:chipStrokeColor="@color/dochelp_red_primary"
                app:chipStrokeWidth="1dp"
                app:chipBackgroundColor="@android:color/white"
                android:textColor="@color/dochelp_red_primary" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReschedule"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reschedule"
                android:textColor="@color/textMedium"
                android:textAllCaps="false"
                app:icon="@drawable/ic_calendar"
                app:iconTint="@color/textMedium"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:paddingVertical="10dp"
                android:layout_marginEnd="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_cancel"
                app:iconTint="#D32F2F"
                app:iconGravity="textStart"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:contentDescription="Cancel Appointment"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>