<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="0dp">

    <!-- Optional bottom fade -->
    <ImageView
        android:id="@+id/bottomFade"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_bottom_fade" />

    <!-- Red medical plus -->
    <ImageView
        android:id="@+id/ivPlus"
        android:layout_width="96dp"
        android:layout_height="106dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_med_plus"
        android:contentDescription="@string/app_name" />

    <!-- Title row -->
    <LinearLayout
        android:id="@+id/titleRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPlus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to "
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/textDark" />

        <TextView
            android:id="@+id/tvBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dochelp"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/dochelpRed" />
    </LinearLayout>

    <!-- Tagline -->
    <TextView
        android:id="@+id/tvTagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleRow"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:lineSpacingExtra="2dp"
        android:text="Your trusted partner in health. Seamlessly connect with doctors, manage your appointments, and keep your medical records organized."
        android:textAlignment="center"
        android:textColor="@color/textLight"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="350dp"
        android:minWidth="0dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_height="48dp"
        android:layout_below="@id/tvTagline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="@color/dochelpRed"
        android:textColor="@android:color/white" />

</RelativeLayout>
